<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context="com.vanshgandhi.ucladining.Fragments.SwipesFragment">

    <include
        layout="@layout/app_bar"/>


    <TextView
        android:id="@+id/should_have_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="72dp"
        android:text="@string/you_should_have"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/swipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/should_have_text"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimary"
        android:textSize="112sp"/>

    <TextView
        android:id="@+id/swipes_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swipes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:text="@string/swipes_left_as_of"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swipes_left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"/>

    <RadioGroup
        android:id="@+id/meal_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/toggle_19p"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="19P"/>

        <RadioButton
            android:id="@+id/toggle_14p"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="14P"/>

        <RadioButton
            android:id="@+id/toggle_19"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="19"/>

        <RadioButton
            android:id="@+id/toggle_14"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="14"/>

        <RadioButton
            android:id="@+id/toggle_11"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="11"/>
    </RadioGroup>



</RelativeLayout>
